<div class="navbar navbar-inverse">
	<div class="navbar-inner">
		<div class="container-fluid">
			<button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>

			<a class="brand" href="<%= spree.root_path %>"> <%= image_tag 'logo.png' %>
			</a>


			<div class="nav-collapse collapse">
				<ul class="nav">
					<li class="active">
						<a href="/products">SHOP PRODUCTS</a>
						<div class="drop-holder">
							<ul class="drop">

								
								<% get_categories.each do |category| %>
									<li class="dropdown" data-trigger="hover">
										<%= link_to category.name, seo_url(category) %>
										<% if category.children.any? %>
											<ul class="dropdown-menu">
												<% category.children.each do |subcategory| %>
													<li><%= link_to subcategory.name, seo_url(subcategory) %></li>													
												<% end -%>
											</ul>
										<% end -%>
									</li>
								<% end -%>

							</ul>
						</div>
					</li>
					<li><a href="#">CONTACT US</a></li>
					<li><a href="/login">SIGN IN</a></li>
					<li><a class="cart-link" href="/cart">SHOPPING CART</a></li>
				</ul>
			</div>
			<div class="area-text">
				<p><strong>FREE SHIPPING!</strong> Purchase $50 or more</p>
			</div>
		</div>
	</div>
</div>