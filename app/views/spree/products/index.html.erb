<% content_for :sidebar do %>
<div data-hook="taxon_sidebar_navigation">
  <%= render 'spree/shared/reviews_sidebar' %>
</div>
<% end %>


<% if params[:keywords] %>

<div data-hook="search_results">
  <% if @products.empty? %>
  <h6 class="search-results-title"><%= Spree.t(:no_products_found) %></h6>
  <% else %>
  <%= render :partial => 'spree/shared/products', :locals => { :products => @products, :taxon => @taxon } %>
  <% end %>
</div>

<% else %>

<div class="row-fluid sort-panel">
  <div class="span6">
    <div class="row-fluid sort-form">
      <div class="span12">
        <select id="product_sort">
          <option value="price_desc" <%= "selected" if @sort == "price_desc" %> >Price Hi &rarr; Lo</option>
          <option value="price_asc" <%= "selected" if @sort == "price_asc" %> >Price Lo &rarr; Hi</option>
          <option value="name_asc" <%= "selected" if @sort == "name_asc" %> >Name A &rarr; Z</option>
          <option value="name_desc" <%= "selected" if @sort == "name_desc" %> >Name Z &rarr; A</option>
        </select>
      </div>
    </div>
  </div>
</div>

<div data-hook="homepage_products" class="row-fluid">
  <%= render :partial => 'spree/shared/products', :locals => { :products => @products, :taxon => @taxon } %>
</div>
<% end %>
