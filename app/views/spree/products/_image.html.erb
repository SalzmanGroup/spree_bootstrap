<% if image %> 
  <%= image_tag image.attachment.url(:large), :itemprop => "image", data: {zoom: "/favicon.ico"} %>

<% else %>
  
	<div id="img_container">
  	<%= large_image(@product, :itemprop => "image", data: {zoom: "/favicon.ico"}) %>
	</div>
	
	<div class="row-fluid">
		<div class="span12">
			<p>
			<br/>
		  	<a href="//pinterest.com/pin/create/button/?url=<%= u request.original_url %>&media=&description=<%=u @product.name %>" data-pin-do="buttonPin" data-pin-config="none" target="_blank">
		  		<img src="//assets.pinterest.com/images/pidgets/pin_it_button.png" />
		  	</a>
			</p>
		</div>
	</div>
	
<script type="text/javascript" src="//assets.pinterest.com/js/pinit.js"></script>
	
<% end %>