<%= form_for Spree::User.new, :as => :spree_user, :url => spree.create_new_session_path do |f| %>
  <div id="password-credentials">
    <p class="row-fluid">
      <span class="span2"><%= f.label :email, Spree.t(:email) %></span>
      <span class="span10"><%= f.email_field :email, :class => 'span12  title', :tabindex => 1 %></span>
    </p>
    <p class="row-fluid">
      <span class="span2"><%= f.label :password, Spree.t(:password) %></span>
       <span class="span10"><%= f.password_field :password, :class => 'span12 title', :tabindex => 2 %></span>
    </p>
  </div>
  <p class="row-fluid">    <label>
      <span class="span12"><%= f.check_box :remember_me, :class => 'remMe'  %>
    <%= f.label :remember_me, Spree.t(:remember_me), :class => 'remMe' %></span>
    </label>
  </p>

  <p><%= f.submit Spree.t(:login), :class => 'button primary', :tabindex => 3 %></p>
<% end %>
